#include <iostream>

using namespace std;

float calcularSuma(float n1, float n2);
float calcularResta(float n1,float n2);
float calcularmulti(float n1, float n2);

int main() {
    int opcion;
    int n1,n2;

    do {
        cout<<"-------BIENVENIDO AL MENÚ--------"<<endl;
        cout << "Seleccione una opción:" << endl;
        cout << "1. Calcular Suma" << endl;
        cout << "2. Calcular Resta" << endl;
        cout << "3. Calcular Multiplicaión" << endl;
        cout << "4. Salir" << endl;
        cout << "Opción: ";
        cin >> opcion;

        switch (opcion) {
            case 1:
               system("clear");
                cout << "Ingrese un numero: ";
                cin >> n1;
                cout << "Ingrese el segundo numero: ";
                cin >> n2;
                cout << "Resultado: " << calcularSuma(n1, n2) << endl;
                break;
            case 2:
             system("clear");
                 cout << "Ingrese un numero: ";
                cin >> n1;
                cout << "Ingrese el segundo numero: ";
                cin >> n2;
                cout << "Resultado: " << calcularResta(n1, n2) << endl;
                break;
            case 3:
             system("clear");
                cout << "Ingrese un número: ";
                cin >> n1;
                cout << "Ingrese el segundo número: ";
                cin >> n2;
                cout << "Resultado: " << calcularmulti(n1, n2) << endl;
                break;
            case 4:
             system("clear");
                
                cout << "Saliendo..." << endl;
                break;
            default:
                cout << "OPCIÓN INVÁLIDA. Por favor, Seleccione una opción válida." << endl;
                break;
        }
    } while (opcion != 4);

    return 0;
}

// Función para calcular suma 
float calcularSuma(float n1, float n2) {
    int resultado ;
    resultado = n1+n2;
    
    return resultado;
}

// Función para calcular resta
float calcularResta(float n1,float n2) {
    int resultado;
    resultado = n1-n2;
    
    return resultado;
}

// Función para calcular multiplicacion
float calcularmulti(float n1,float n2) {
float resultado ;
    
resultado = n1*n2;
    
    return resultado;
}
