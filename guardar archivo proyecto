#include <iostream>
#include <fstream>
#include <string>

using namespace std;

class Cliente {
public:
    string nombre;
    int ci;
    int celular;
};

class ArchivoClientes {
private:
    string nombreArchivo;

public:
    ArchivoClientes(string nombre) : nombreArchivo(nombre) {}

    void guardarCliente(const Cliente& cliente) {
        ofstream archivo(nombreArchivo, ios::binary | ios::app); // Abre el archivo en modo binario y adjuntar al final
        if (archivo.is_open()) {
            archivo.write(reinterpret_cast<const char*>(&cliente), sizeof(Cliente)); // Escribe los datos del cliente en binario
            archivo.close(); // Cierra el archivo
            cout << "Cliente guardado correctamente." << endl;
        } else {
            cout << "Error: No se pudo abrir el archivo." << endl;
        }
    }
};

int main() {
    ArchivoClientes archivo("clientes.bin");

    // Ejemplo de uso
    Cliente cliente1 = {"Juan Perez", 1234567, 999888777};
    Cliente cliente2 = {"Maria Gomez", 9876543, 555444333};

    archivo.guardarCliente(cliente1);
    archivo.guardarCliente(cliente2);

    return 0;
}
